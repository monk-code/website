---
import '../styles/global.css'

export interface Props {
  title?: string
  description?: string
}

const { title = 'MONKCODE', description = 'Web development portfolio' } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <slot />
  </body>
</html>