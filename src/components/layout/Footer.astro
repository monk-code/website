---
import { CONTACT_INFO, NAVIGATION_ITEMS, SITE_CONFIG } from '@/utils/constants.js'

const currentYear = new Date().getFullYear()
---

<footer role="contentinfo" class="relative bg-white dark:bg-neutral-900 border-t border-neutral-200 dark:border-neutral-800">
  <!-- Subtle background pattern -->
  <div class="absolute inset-0 bg-gradient-to-br from-neutral-50/50 to-transparent dark:from-neutral-800/20 pointer-events-none" aria-hidden="true"></div>
  
  <div class="relative container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
      <!-- Brand Column -->
      <div class="space-y-4">
        <span class="font-montserrat font-bold text-xl text-primary">{SITE_CONFIG.name}</span>
        <p class="text-foreground-muted text-sm">
          Digital craftsmanship through code
        </p>
        <p class="text-foreground-muted text-sm">
          Â© {currentYear} {SITE_CONFIG.author.name}
        </p>
      </div>
      
      <!-- Connect Links Column -->
      <div class="space-y-4">
        <h3 class="font-semibold text-foreground">Connect</h3>
        <ul class="space-y-2">
          <li>
            <a 
              href={`mailto:${CONTACT_INFO.email}`}
              class="text-foreground-muted hover:text-primary transition-colors text-sm inline-flex items-center"
            >
              Email
            </a>
          </li>
          <li>
            <a 
              href={CONTACT_INFO.github}
              target="_blank"
              rel="noopener noreferrer"
              class="text-foreground-muted hover:text-primary transition-colors text-sm inline-flex items-center"
            >
              GitHub
              <svg 
                class="inline-block w-3 h-3 ml-1 opacity-50" 
                fill="none" 
                stroke="currentColor" 
                viewBox="0 0 24 24" 
                xmlns="http://www.w3.org/2000/svg"
                aria-hidden="true"
              >
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                />
              </svg>
            </a>
          </li>
          <li>
            <a 
              href={CONTACT_INFO.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="text-foreground-muted hover:text-primary transition-colors text-sm inline-flex items-center"
            >
              LinkedIn
              <svg 
                class="inline-block w-3 h-3 ml-1 opacity-50" 
                fill="none" 
                stroke="currentColor" 
                viewBox="0 0 24 24" 
                xmlns="http://www.w3.org/2000/svg"
                aria-hidden="true"
              >
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                />
              </svg>
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Navigate Links Column -->
      <div class="space-y-4">
        <h3 class="font-semibold text-foreground">Navigate</h3>
        <ul class="space-y-2">
          <li>
            <a 
              href="/"
              class="text-foreground-muted hover:text-primary transition-colors text-sm"
            >
              Home
            </a>
          </li>
          {NAVIGATION_ITEMS.map((item) => (
            <li>
              <a 
                href={item.href}
                class="text-foreground-muted hover:text-primary transition-colors text-sm"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Tech Stack Credits -->
    <div class="mt-8 pt-8 border-t border-neutral-200 dark:border-neutral-800">
      <p class="text-center text-foreground-muted text-sm">
        Built with
        <a 
          href="https://astro.build"
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary hover:underline mx-1"
        >
          Astro
        </a>
        +
        <a 
          href="https://vuejs.org"
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary hover:underline mx-1"
        >
          Vue
        </a>
        +
        <a 
          href="https://tailwindcss.com"
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary hover:underline mx-1"
        >
          Tailwind CSS
        </a>
      </p>
    </div>
  </div>
</footer>