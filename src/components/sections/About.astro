<script>
  // Fade-in animation on scroll
  const observerOptions = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1
  }

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible')
      }
    })
  }, observerOptions)

  // Observe all fade-in elements
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.about-section .fade-in')
    fadeElements.forEach(el => observer.observe(el))
  })
</script>

<style>
.about-section {
  position: relative;
  padding: 120px 0;
}

/* Background Element */
.section-background {
  position: absolute;
  inset: 0;
  z-index: 0;
}

.background-accent {
  position: absolute;
  top: 20%;
  right: -10%;
  width: 300px;
  height: 300px;
  background: linear-gradient(45deg, rgba(255, 222, 10, 0.03) 0%, transparent 70%);
  border-radius: 50%;
  filter: blur(60px);
}

/* Section Header */
.section-header {
  text-align: center;
  margin-bottom: 80px;
  position: relative;
  z-index: 1;
}

.section-title {
  font-size: clamp(3rem, 6vw, 4.5rem);
  font-weight: 700;
  line-height: 0.9;
  font-family: var(--font-family-heading);
  margin-bottom: 24px;
  letter-spacing: -0.02em;
}

.title-main {
  color: var(--color-foreground);
}

.title-accent {
  color: var(--color-primary);
  display: inline-block;
  position: relative;
}

.section-subtitle {
  font-size: 1.5rem;
  font-weight: 400;
  color: var(--color-muted-foreground);
  font-family: var(--font-family-body);
  margin: 0;
  letter-spacing: 0.02em;
}

/* Main Content */
.about-content {
  max-width: 1000px;
  margin: 0 auto;
  display: grid;
  gap: 48px;
  position: relative;
  z-index: 1;
}

/* Introduction Block */
.intro-block {
  position: relative;
  display: grid;
  grid-template-columns: 60px 1fr;
  gap: 32px;
  align-items: start;
}

.content-accent {
  width: 4px;
  height: 80px;
  background: linear-gradient(to bottom, var(--color-primary), transparent);
  border-radius: 2px;
  margin-top: 8px;
}

.intro-content {
  display: grid;
  gap: 24px;
}

.intro-lead {
  font-size: 1.5rem;
  line-height: 1.4;
  color: var(--color-foreground);
  font-family: var(--font-family-body);
  font-weight: 500;
  margin: 0;
}

.intro-text {
  font-size: 1.25rem;
  line-height: 1.6;
  color: var(--color-muted-foreground);
  font-family: var(--font-family-body);
  margin: 0;
}

.years-highlight {
  color: var(--color-primary);
  font-weight: 600;
  position: relative;
  transition: all 0.3s ease;
}

.years-highlight:hover {
  transform: scale(1.05);
  text-shadow: 0 0 20px rgba(255, 222, 10, 0.3);
}

/* Philosophy Block */
.philosophy-block {
  position: relative;
  max-width: 800px;
  margin: 0 auto;
  text-align: center;
}

.philosophy-text {
  font-size: 1.25rem;
  line-height: 1.6;
  color: var(--color-muted-foreground);
  font-family: var(--font-family-body);
  margin: 0;
}

/* Interests Block */
.interests-block {
  position: relative;
}

.interests-header {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 24px;
  margin-bottom: 32px;
}

.interests-label {
  font-size: 1rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.15em;
  color: var(--color-muted-foreground);
  margin: 0;
  font-family: var(--font-family-heading);
}

.interests-divider {
  width: 60px;
  height: 2px;
  background: linear-gradient(to right, var(--color-primary), transparent);
  border-radius: 1px;
}

.interests-content {
  max-width: 900px;
  margin: 0 auto;
}

.interests-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24px;
}

.interest-item {
  display: flex;
  align-items: center;
  gap: 16px;
  padding: 24px;
  background: rgba(255, 255, 255, 0.02);
  border-radius: 8px;
  border: 1px solid rgba(255, 255, 255, 0.05);
  transition: all 0.3s ease;
}

.interest-item:hover {
  background: rgba(255, 222, 10, 0.02);
  border-color: rgba(255, 222, 10, 0.1);
  transform: translateY(-2px);
}

.interest-icon {
  font-size: 1.5rem;
  opacity: 0.7;
  flex-shrink: 0;
}

.interest-item p {
  margin: 0;
  font-size: 1rem;
  line-height: 1.4;
  color: var(--color-muted-foreground);
  font-family: var(--font-family-body);
}

/* Jazz Hover Effect */
.hover-jazz {
  cursor: pointer;
  color: var(--color-foreground);
  font-weight: 500;
  position: relative;
  transition: color 0.2s ease;
}

.hover-jazz:hover {
  color: var(--color-primary);
}

.hover-jazz:hover::after {
  content: '‚ô™';
  position: absolute;
  top: -25px;
  right: -15px;
  color: var(--color-primary);
  font-size: 1.2rem;
  animation: music-note 1s ease;
}

@keyframes music-note {
  0% {
    opacity: 0;
    transform: translateY(10px);
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0;
    transform: translateY(-20px);
  }
}

/* Call to Action */
.cta-block {
  position: relative;
  max-width: 600px;
  margin: 0 auto;
  text-align: center;
}

.cta-content {
  display: grid;
  gap: 32px;
}

.cta-lead {
  font-size: 1.25rem;
  line-height: 1.6;
  color: var(--color-foreground);
  font-weight: 500;
  font-family: var(--font-family-body);
  margin: 0;
}

.cta-action {
  display: grid;
  gap: 24px;
  justify-items: center;
}

.cta-text {
  font-size: 1.25rem;
  line-height: 1.5;
  color: var(--color-muted-foreground);
  font-family: var(--font-family-body);
  margin: 0;
}

.contact-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16px 32px;
  background: var(--color-primary);
  color: var(--color-code-black);
  font-family: var(--font-family-heading);
  font-size: 1.125rem;
  font-weight: 600;
  text-decoration: none;
  border-radius: 8px;
  transition: all 0.3s ease;
  border: 2px solid var(--color-primary);
  letter-spacing: 0.02em;
}

.contact-button:hover {
  background: transparent;
  color: var(--color-primary);
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(255, 222, 10, 0.2);
}

.contact-button:focus {
  outline: none;
  box-shadow: 0 0 0 3px rgba(255, 222, 10, 0.3);
}

/* Responsive Design */
/* Tablet - 2 columns */
@media (max-width: 1024px) {
  .interests-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 768px) {
  .about-section {
    padding: 80px 0;
  }
  
  .section-header {
    margin-bottom: 48px;
  }
  
  .about-content {
    gap: 40px;
  }
  
  .intro-block {
    grid-template-columns: 1fr;
    gap: 24px;
    text-align: center;
  }
  
  .content-accent {
    width: 60px;
    height: 4px;
    margin: 0 auto;
  }
  
  .interests-header {
    flex-direction: column;
    gap: 16px;
  }
  
  .interests-grid {
    grid-template-columns: 1fr;
    gap: 18px;
  }
  
  .interest-item {
    flex-direction: column;
    text-align: center;
    gap: 12px;
    padding: 20px;
  }
  
  .intro-lead {
    font-size: 1.25rem;
  }
  
  .intro-text {
    font-size: 1.125rem;
  }
  
  .philosophy-text {
    font-size: 1.125rem;
  }
  
  .cta-lead {
    font-size: 1.125rem;
  }
  
  .cta-text {
    font-size: 1.125rem;
  }
  
  .contact-button {
    font-size: 1rem;
    padding: 14px 28px;
  }
}

@media (max-width: 480px) {
  .about-content {
    gap: 32px;
  }
  
  .section-header {
    margin-bottom: 32px;
  }
  
  .background-accent {
    display: none;
  }
  
  .interests-grid {
    gap: 16px;
  }
  
  .interest-item {
    padding: 18px;
    gap: 12px;
  }
}

/* Dark mode adjustments */
[data-theme="dark"] .interest-item {
  background: rgba(255, 255, 255, 0.03);
  border-color: rgba(255, 255, 255, 0.08);
}

[data-theme="dark"] .interest-item:hover {
  background: rgba(255, 222, 10, 0.05);
  border-color: rgba(255, 222, 10, 0.15);
}

[data-theme="dark"] .contact-button {
  background: var(--color-primary);
  color: var(--color-code-black);
}

[data-theme="dark"] .contact-button:hover {
  background: transparent;
  color: var(--color-primary);
}

/* Reduced motion */
@media (prefers-reduced-motion: reduce) {
  .years-highlight,
  .hover-jazz,
  .hover-jazz::after,
  .interest-item,
  .contact-button {
    transition: none;
    animation: none;
    transform: none;
  }
  
  .years-highlight:hover,
  .interest-item:hover,
  .contact-button:hover {
    transform: none;
  }
}
</style>